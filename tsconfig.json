{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["src/**/*", "public/**/*"],
  "exclude": ["node_modules"]
} 